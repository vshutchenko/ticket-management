@using TicketManagement.WebApplication.Models.VenueManagement
@model AreaViewModel

<h1>@Localizer["Create area"]</h1>
<hr />

<div>
    <form asp-action="CreateArea">
        <input asp-for="LayoutId" type="hidden" value="@ViewBag.LayoutId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="w-25">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CoordX" class="control-label"></label>
                <input asp-for="CoordX" class="form-control" />
                <span asp-validation-for="CoordX" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CoordY" class="control-label"></label>
                <input asp-for="CoordY" class="form-control" />
                <span asp-validation-for="CoordY" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <input type="submit" value="@Localizer["Submit"]" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

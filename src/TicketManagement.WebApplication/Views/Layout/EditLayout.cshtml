@using TicketManagement.WebApplication.Models.VenueManagement
@model LayoutViewModel

<h1>@Localizer["Edit layout"]</h1>
<hr />

<div>
    <a class="btn btn-success" asp-controller="Area" asp-action="AreaList" asp-route-layoutId="@Model.Id">@Localizer["View areas"]</a>
    <form asp-action="EditLayout" asp-antiforgery="true">
        <input asp-for="Id" type="hidden" value="@Model.Id" />
        <input asp-for="VenueId" type="hidden" value="@Model.VenueId" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="w-25">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value="@Model.Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <input type="submit" value="@Localizer["Submit"]" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
